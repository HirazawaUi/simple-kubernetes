[Unit]
Description=kubelet: The Kubernetes Node Agent
Documentation=http://kubernetes.io/docs/

[Service]
Environment="KUBELET_FEATURE_ARGS=--feature-gates=RotateKubeletClientCertificate=true,CustomPodDNS=true"
Environment="KUBELET_NETWORK_ARGS=--network-plugin=cni --cni-conf-dir=/etc/cni/net.d --cni-bin-dir=/opt/cni/bin"
Environment="KUBELET_DNS_ARGS=--cluster-dns={{ service_cidr | ipaddr('10') | ipv4('address') }} --cluster-domain=cluster.local"
Environment="KUBELET_SYSTEM_PODS_ARGS=--pod-manifest-path=/etc/kubernetes/manifests --allow-privileged=true --max-pods=250"

ExecStart=/usr/bin/kubelet --pod-infra-container-image={{ pod_infra_container_image }} --kubeconfig=/etc/kubernetes/kubelet.conf --register-node $KUBELET_SYSTEM_PODS_ARGS $KUBELET_DNS_ARGS $KUBELET_NETWORK_ARGS $KUBELET_FEATURE_ARGS
Restart=always
StartLimitInterval=0
RestartSec=10

[Install]
WantedBy=multi-user.target