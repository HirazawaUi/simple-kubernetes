[Unit]
Description=kubelet: The Kubernetes Node Agent
Documentation=http://kubernetes.io/docs/

#FIXME enable more features

[Service]
ExecStart=/usr/local/bin/kubelet --pod-infra-container-image={{ pod_infra_container_image }} --kubeconfig=/etc/kubernetes/kubelet.conf --pod-manifest-path=/etc/kubernetes/manifests --cluster-dns={{ service_cidr | ipaddr('10') | ipv4('address') }} --cluster-domain=cluster.local --pod-cidr={{ pod_cidr }} --register-node --allow-privileged --network-plugin=cni
Restart=always
StartLimitInterval=0
RestartSec=10

[Install]
WantedBy=multi-user.target